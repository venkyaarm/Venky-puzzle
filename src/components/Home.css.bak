/* Reset */
html, body, #root {
  height: 100%;
  margin: 0;
  padding: 0;
}

/* ✅ Main Wrapper */
.home-wrapper {
  position: relative;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ✅ Background Video */
.bg-video {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  object-fit: cover;
  z-index: -1;

  /* 🔥 Make it vibrant */
  opacity: 1; /* full brightness */
  filter: brightness(1.2) contrast(1.2) saturate(1.5);
}


/* ✅ Card Styling */
.home-card {
  background-color: rgba(255, 255, 255, 0.85);
  padding: 40px 30px;
  border-radius: 20px;
  text-align: center;
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);

  /* 🌟 Apply both floating and slight rotation */
  animation: floatGlowRotate 5s ease-in-out infinite alternate;
  transform-style: preserve-3d;
}


/* ✅ Title */
.home-title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
  animation: bounceGlow 2s infinite;
}

.venky {
  background: linear-gradient(to right, #ec4899, #f59e0b);
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ✅ Buttons */
.play-btn, .create-btn {
  margin: 10px auto;
  padding: 14px 20px;
  width: 80%;
  font-size: 16px;
  border: none;
  border-radius: 8px;
  color: white;
  cursor: pointer;
}

.play-btn {
  background-color: #2563eb;
}

.create-btn {
  background-color: #10b981;
}

.play-btn:hover,
.create-btn:hover {
  transform: scale(1.05);
}

/* ✅ Title animation */
@keyframes bounceGlow {
  0%, 100% {
    text-shadow: 0 0 10px #f472b6, 0 0 20px #f472b6;
  }
  50% {
    text-shadow: 0 0 20px #fbbf24, 0 0 30px #f472b6;
  }
}
@keyframes floatGlowRotate {
  0% {
    transform: translateY(0px) rotateX(0deg) rotateY(0deg);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
  50% {
    transform: translateY(-10px) rotateX(2deg) rotateY(2deg);
    box-shadow: 0 20px 40px rgba(255, 0, 150, 0.3);
  }
  100% {
    transform: translateY(0px) rotateX(0deg) rotateY(0deg);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }
}
